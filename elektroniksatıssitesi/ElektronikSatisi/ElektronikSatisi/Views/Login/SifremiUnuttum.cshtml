
@{
    ViewBag.Title = "SifremiUnuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="container">
        ""
        <ol class="breadcrumb breadcrumb1 animated wow fadeInUp" data-wow-delay=".5s">
            <li><a href="/Home/Index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Ana Sayfa</a></li>
            <li class="active">Şifre Değiştir</li>
        </ol>
    </div>
</div>
<!--//breadcrumbs-->
<!--login-->
<div class="login-page">
    <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
        <h3 class="title">Giriş Yapma<span> Formu</span></h3>
        <p>EMRE ELEKTRONİK<br>Teknoloji Adresi</p>
    </div>
    <div class="widget-shadow">
        <div class="login-top wow fadeInUp animated" data-wow-delay=".7s">
            <h4>HOŞGELDİN! <br> Üye Değil Misin? <a href="/Register/Index"> Şimdi Kayıt Ol »</a> </h4>
        </div>
        <div class="login-body wow fadeInUp animated" data-wow-delay=".7s">
            <form action="/Login/Index" method="post">
                <h4 style="color:red; text-align:center" ;>@TempData["mesaj"]</h4>
                <input type="text" class="user" name="email" placeholder="Email Giriniz" required="">
                <input type="password" name="password" class="lock" placeholder="Şifre Giriniz" required="">
                <input type="submit" name="Sign In" value="Giriş Yap">
                <div class="forgot-grid">
                    <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Beni Hatırla</label>
                    <div class="forgot">
                        <a href="/Login/SifremiUnuttum">Şifreni mi unuttun?</a>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </form>
        </div>
    </div>
    <div class="login-page-bottom">
        <h5> - Yada -</h5>
        <div class="social-btn"><a href="Https://www.facebook.com"><i>Facebook İle Giriş Yap</i></a></div>
        <div class="social-btn sb-two"><a href="Https://www.twitter.com"><i>Twitter İle Giriş Yap</i></a></div>
    </div>
</div>
